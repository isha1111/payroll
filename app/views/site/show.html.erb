<% site = Site.find_by(id: params[:id]) %>
<form action="/site/edit/<%= params[:id] %>" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label>Site Name</label>
  <input name="sname" value="<%= site.site_name %>">
  <label>Site Location</label>
  <input name="slocation" value="<%= site.site_location %>">
  <br>
  <button class="btn">Save</button>
</form>

<form class="" action="/site/delete/<%= params[:id] %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <button class="btn">Delete</button>
  <a href="/admin/login"><button class="btn">Cancel</button></a>
</form>
