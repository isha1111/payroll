Timesheets for Employee
<form class="" action="/timesheet/create" method="post" id="form">
  <table id ="table">
    <td>
    <tr>
      <td>
        Employee Name
      </td>
      <td>
        Work Location
      </td>
      <td>
        Day
      </td>
      <td>
        Hours
      </td>
    </tr>
    <tr>
      <td>
        <select name="ename">
          <% @employees.each do |employee| %>
            <option value="<%= employee.id %>"> <%= employee.name %></option>
          <% end %>
        </select>
      </td>
      <td>
        <select name="site">
          <% @sites.each do |site| %>
            <option value="<%= site.id %>"> <%= site.site_name %></option>
          <% end %>
        </select>
      </td>
      <td>
        <input name="day" type="date" data-date-inline-picker="true" />
      </td>
      <td>
        <input name="hours" type="number" step="0.01">
      <td>
    </tr>
  </table>

  <a id="add-row">Add another row</a>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </br>
  <button class="btn" id="btn">Save</button>
  <a href="/admin/login"><button class="btn">Cancel</button></a>

</form>

<script>
  document.getElementById('add-row').addEventListener('click',function addrow() {
    $('#table').append('<tr><td><select name=""><% @employees.each do |employee| %><option value="<%= employee.id %>"> <%= employee.name %></option><% end %></select></td> <td>  <select name=""><% @sites.each do |site| %> <option value="<%= site.id %>"> <%= site.site_name %></option><% end %>  </select></td>  <td><input type="date" data-date-inline-picker="true" /></td><td><input type="time"></td></tr>');

  });
  function getvalue() {
    var selected_employee = document.getElementById("employee-drpdwn").value;
    document.getElementById("ename").value = selected_employee;
  }


</script>
