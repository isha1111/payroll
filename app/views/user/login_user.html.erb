<div class="form-div form-container">
  <h3>Welcome to XYZ Employee Login</h3>
  <!-- user(EMployee) login form -->
  <form class="form" action="/session/emp" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="">Username</label>
    <input type="text" name="username" value="" required="true">
    <label for="">Password</label>
    <input name="password" value="" type="password" required="true">
    </br>
    <button class="btn">Login</button>
    <a href="/user/new">
      <button class="btn">Sign Up</button>
    </a></br>
    <a href="/">
      <button class="btn">Cancel</button>
    </a>
  </form>
</div>
